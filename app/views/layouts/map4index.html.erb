<!DOCTYPE html>
<html>
  <head>
    <title><%= content_for?(:title) ? yield(:title) : "Untitled" %></title>
    <%= stylesheet_link_tag "application","table" %>
    <%= javascript_include_tag "jquery.min","jquery_ujs" %>
    <%= csrf_meta_tag %>
    <%= yield(:head) %>
  </head>
  <body>
    <div id="container">
      <div id="menu">
        <div style="float:left;color:gray;display:none;">
          <a href="/" style="color:gray">创客汇</a>
        </div>
        
        <div><a href="/login">登录</a></div>
        <!--<div><a href="/login">申请内测</a></div>-->
      </div>
      <div class="clear"></div>

      <% flash.each do |name, msg| %>
        <%= content_tag :div, msg, :id => "flash_#{name}" %>
      <% end %>
      <%= content_tag :h1, yield(:title) if show_title? %>
      <%= yield %>
      <%= yield :scripts %>

    </div>
    <%= render :partial => 'home/footer' %>
  </body>
</html>
