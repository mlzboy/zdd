<% title "Post" %>
<table>
  <tr>
    <th>缺什么:</th>
    <td><%=@post.lack_list%></td>
  </tr>
  <tr>
    <th>有什么:</th>
    <td><%=@post.hold_list%></td>
  </tr>
  <tr>
    <th>搭档要求:</th>
    <td><%= @post.demand %></td>
  </tr>
  <tr>
    <th>地区:</th>
    <td><%= @post.area_list %></td>
  </tr>
  <tr>
    <th>发起人:</th>
    <td><%= @post.user.username %></td>
  </tr>
  <tr>
    <th>发布时间:</th>
    <td><%= @post.created_at.strftime("%Y-%m-%d")%></td>
  </tr>
  <tr>
    <th>QQ:</th>
    <td><%= @post.demand %></td>
  </tr>
  <tr>
    <th>手机:</th>
    <td><%= @post.mobile %></td>
  </tr>
  <tr>
    <th>其它联系方式:</th>
    <td><%= @post.contact %></td>
  </tr>
</table>

<p>
  <%= link_to "Edit", edit_post_path(@post) %> |
  <%= link_to "View All", posts_path %>
</p>
